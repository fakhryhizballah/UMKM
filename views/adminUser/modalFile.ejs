<div id="inputModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
  <div class="bg-white rounded-2xl shadow-lg w-full max-w-lg p-6 relative animate-fadeIn">
    <!-- Close Button -->
    <button onclick="document.getElementById('inputModal').classList.add('hidden')" class="absolute top-3 right-3 text-gray-500 hover:text-red-500 text-xl font-bold">
      &times;
    </button>

    <h2 class="text-xl font-semibold mb-4">Tambah Data</h2>
    <form id="formInputData" class="space-y-4" enctype="multipart/form-data">
      
      <!-- Jenis Files -->
      <div>
        <label for="jenis_files" class="block text-sm font-medium text-gray-700">Jenis File</label>
        <select id="jenis_files" name="jenis_files" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
          <option value="">Pilih Jenis</option>
          <option value="KTP">KTP</option>
          <option value="NIB">NIB</option>
          <option value="SERTIFIKAT IRTP">SERTIFIKAT IRTP</option>
          <option value="SERTIFIKAT HALAL">SERTIFIKAT HALAL</option>
          <option value="SERTIFIKAT HAKI">SERTIFIKAT HAKI</option>
          <option value="NPWP">NPWP</option>
          <option value="LAINNYA">LAINNYA</option>
          <option value="IJASAH">IJASAH</option>
        </select>
      </div>

      <!-- Catatan -->
      <div>
        <label for="catatan" class="block text-sm font-medium text-gray-700">Catatan</label>
        <input type="text" id="catatan" name="catatan" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" >
      </div>

      <!-- Nomor -->
      <div>
        <label for="nomor" class="block text-sm font-medium text-gray-700">Nomor</label>
        <input type="text" id="nomor" name="nomor" class="mt-1 block w-full rounded border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" required>
      </div>

      <!-- File Upload -->
      <div>
        <label for="url_data" class="block text-sm font-medium text-gray-700">Upload File</label>
        <input type="file" id="url_data" name="url_data" class="mt-1 block w-full text-sm text-gray-700 border border-gray-300 rounded file:bg-blue-50 file:border file:border-gray-300 file:rounded file:px-3 file:py-1 file:text-blue-700 file:cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-500" accept="image/*,application/pdf" required>
      </div>

      <!-- Submit -->
      <div class="text-right">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10%);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out;
  }
</style>